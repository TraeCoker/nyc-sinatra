<form action="/figures" method="POST">
  <label>Name: </label> <input type="text" name="figure[name]" id="figure_name">
    <h3>Titles</h3>
    <ul>
    <% @titles.each do |title| %>
        <li><input type="checkbox" name="figure[title_ids][]" id="title_<%= title.id %>" value="<%= title.id %>"><%= title.name %></li>
    <% end %>
    </ul>
    <h3>Create New title:</h3> 
    <input type="text" name="title[name]" id="new_title">
    <br>
    <h3>Landmarks</h3>
     <ul>
    <% @landmarks.each do |landmark| %>
        <li><input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= landmark.id %>" value="<%= landmark.id %>"><%= landmark.name %></li>
    <% end %>
    </ul>
    <h3>Create New landmark:</h3> 
    <p>Name: </p><input type="text" name="landmark[name]" id="new_landmark"> Year: <input type="text" name="landmark[year]"></p>
    <br><br>
    <input type="submit" value="Create New Figure" id="Create New Figure">
</form>